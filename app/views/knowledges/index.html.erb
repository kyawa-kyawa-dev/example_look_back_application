<div class="max-w-6xl mx-auto">
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl font-bold text-gray-800"><%= "今日のナレッジ(#{Time.current.strftime("%Y/%m/%d")})" %></h2>
      <%= link_to new_knowledge_path, 
          class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors flex items-center gap-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        新規作成
      <% end %>
    </div>

    <% if @today_knowledges.count == 0 %>
      <!-- 空の状態 -->
      <div class="bg-white rounded-lg border-2 border-dashed border-gray-300 p-12 text-center">
        <div class="w-16 h-16 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-800 mb-2">今日のナレッジを記録しよう</h3>
        <p class="text-gray-600 mb-4">まだ今日は何も記録されていません。</p>
        <%= link_to new_knowledge_path, 
            class: "inline-block px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors" do %>
          最初のナレッジを記録
        <% end %>
      </div>
    <% else %>
      <div class="space-y-4">
        <%= render partial: 'knowledge', collection: @today_knowledges %>
      </div>
    <% end %>
  </div>

  <!-- タブ切り替え -->
  <div class="mb-8" data-controller="tab">
    <div class="border-b border-gray-200 mb-6">
      <div class="flex gap-8">
        <button
          data-tab-target="button"
          data-tab-name="picked"
          data-action="click->tab#selectTab"
          class="pb-3 px-1 font-semibold text-sm transition-colors relative text-indigo-600"
        >
          今日のピックアップ
          <div class="absolute bottom-0 left-0 right-0 h-0.5 bg-indigo-600"></div>
        </button>
        <button
          data-tab-target="button"
          data-tab-name="past"
          data-action="click->tab#selectTab"
          class="pb-3 px-1 font-semibold text-sm transition-colors relative text-gray-500 hover:text-gray-700"
        >
          過去のナレッジ
          <div class="absolute bottom-0 left-0 right-0 h-0.5 bg-indigo-600 hidden"></div>
        </button>
        <button
          data-tab-target="button"
          data-tab-name="review"
          data-action="click->tab#selectTab"
          class="pb-3 px-1 font-semibold text-sm transition-colors relative text-gray-500 hover:text-gray-700"
        >
          復習予定
          <div class="absolute bottom-0 left-0 right-0 h-0.5 bg-indigo-600 hidden"></div>
        </button>
      </div>
    </div>

    <!-- タブコンテンツ -->
    <div class="space-y-4">
      <!-- 過去のナレッジ -->
      <div data-tab-target="content" data-tab-name="past" class="hidden">
        <!-- ここに過去のナレッジを表示 -->
      </div>

      <!-- 本日のピックアップ -->
      <div data-tab-target="content" data-tab-name="picked" class="">
        <!-- ここに本日のピックアップを表示 -->
      </div>

      <!-- 復習予定 -->
      <div data-tab-target="content" data-tab-name="review" class="hidden">
        <!-- ここに復習予定を表示 -->
      </div>
    </div>
  </div>
</div>