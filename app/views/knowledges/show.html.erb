<div class="max-w-4xl mx-auto">
  <%= link_to knowledges_path, class: "mb-4 text-indigo-600 hover:underline flex items-center gap-1 cursor-pointer" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    一覧に戻る
  <% end %>

  <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <!-- ヘッダー部分 -->
    <div class="p-6 border-b border-gray-200">
      <div class="flex justify-between items-start mb-4">
        <h1 class="text-3xl font-bold text-gray-900"><%= @knowledge.title %></h1>
        <div class="flex gap-2">
          <%= link_to edit_knowledge_path(@knowledge), class: "p-2 hover:bg-gray-100 rounded transition-colors" do %>
            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
          <% end %>
          <%= button_to knowledge_path(@knowledge), method: :delete, data: { turbo_confirm: '本当に削除しますか？' }, class: "p-2 hover:bg-gray-100 rounded transition-colors" do %>
            <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
          <% end %>
        </div>
      </div>

      <!-- タグ -->
      <div class="flex items-center gap-2 mb-4 flex-wrap">
        <% @knowledge.tags.each do |tag| %>
          <span class="px-3 py-1 rounded-full text-sm font-medium" style="background-color: <%= tag.color %>20; color: <%= tag.color %>; border: 1px solid <%= tag.color %>40;">
            #<%= tag.name %>
          </span>
        <% end %>
      </div>

      <!-- メタ情報 -->
      <div class="flex items-center gap-4 text-sm text-gray-500">
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>作成日: <%= @knowledge.created_at.strftime('%Y年%m月%d日 %H:%M') %></span>
        </div>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>最終更新: <%= @knowledge.updated_at.strftime('%Y年%m月%d日 %H:%M') %></span>
        </div>
      </div>
    </div>

    <!-- リマインダー予定日 -->
    <% if @knowledge.reminders.count > 0 %>
      <div class="p-6 bg-green-50 border-b border-green-200">
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
          <div>
            <h3 class="text-sm font-semibold text-green-900 mb-2">リマインダー予定</h3>
            <div class="space-y-2">
              <% @knowledge.reminders.each do |reminder| %>
                <% if reminder.three? %>
                  <div class="flex items-center gap-2 text-sm">
                    <span class="px-2 py-1 bg-green-100 text-green-700 rounded font-medium">3日後</span>
                    <span class="text-green-800"><%= (@knowledge.created_at + 3.days).strftime('%Y年%m月%d日') %>に復習通知</span>
                  </div>
                <% elsif reminder.seven? %>
                  <div class="flex items-center gap-2 text-sm">
                    <span class="px-2 py-1 bg-green-100 text-green-700 rounded font-medium">7日後</span>
                    <span class="text-green-800"><%= (@knowledge.created_at + 7.days).strftime('%Y年%m月%d日') %>に復習通知</span>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- 本文 -->
    <div class="p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-3">内容</h2>
      <div class="bg-gray-50 p-4 rounded-lg font-mono text-sm whitespace-pre-wrap border border-gray-200">
        <%= @knowledge.body %>
      </div>
    </div>

    <!-- 参考URL -->
    <% if @knowledge.context_references.count %>
      <div class="p-6 border-t border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900 mb-3">参考URL</h2>
        <% @knowledge.context_references.each do |context_reference| %>
          <div class="space-y-2">
            <%= link_to context_reference.url, target: "_blank", rel: "noopener noreferrer", class: "flex items-center gap-2 text-indigo-600 hover:text-indigo-700 hover:underline" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              <%= context_reference.url %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>