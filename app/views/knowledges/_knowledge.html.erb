<%= link_to knowledge_path(knowledge) do %>
  <div class="mb-2 bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow cursor-pointer">
    <div class="flex items-start justify-between mb-3">
      <h3 class="text-lg font-bold text-gray-900"><%= knowledge.title %></h3>
      <span class="text-sm text-gray-500"><%= knowledge.created_at.strftime("%p %I:%M") %></span>
    </div>
    <p class="text-gray-600 text-sm mb-4 font-mono bg-gray-50 p-3 rounded">
      <%= knowledge.body %>
    </p>
    <div class="flex items-center gap-2 flex-wrap">
      <!-- ナレッジに紐づいているタグを表示する -->
      <% knowledge.tags.each do |tag| %>
        <span class="px-3 py-1 rounded-full text-xs font-medium" style="background-color: <%= tag.color %>20; color: <%= tag.color %>; border-color: <%= tag.color %>40;">
          <%= tag.name %>
        </span>
      <% end%>
    </div>
  </div>
<% end %>