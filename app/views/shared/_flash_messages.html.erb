<div id="flash" data-controller="flash" data-flash-target="flash" class="mt-2 mb-2">
  <% flash.each do |type, message| %>
    <%
      color = type == "notice" ? 'green' : 'red'
      icon_path = type == "notice" ? 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' : 'M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
    %>
    <div class="mx-4 max-w-md bg-<%= color %>-50 border-l-4 border-<%= color %>-500 rounded-lg p-3 shadow-sm">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg class="w-5 h-5 text-<%= color %>-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= icon_path %>" />
          </svg>
        </div>
        <div class="ml-2 flex-1">
          <p class="text-sm font-medium text-<%= color %>-800">
            <%= message %>
          </p>
        </div>
        <button data-action="click->flash#close" class="flex-shrink-0 ml-3 text-<%= color %>-500 hover:text-<%= color %>-700 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  <% end %>
</div>