<% content_for :hide_header, true %>

<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50 flex items-center justify-center p-4">
  <div class="w-full max-w-2xl">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-indigo-600 mb-2">Knowledge Hub</h1>
      <p class="text-gray-600">学びの記録を今すぐ始めよう</p>
    </div>

    <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-8 md:p-12">
      <h2 class="text-2xl font-bold text-gray-800 mb-6">新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.text_field :name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent", placeholder: "アルファベットで入力(例: KnowledgeBoy)" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <div class="relative">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
            </svg>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "your@email.com", class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <% if @minimum_password_length %>
            <em class="text-xs text-gray-500">(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
          <div class="relative mt-1">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••", class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード（確認）", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <div class="relative">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "アカウントを作成", class: "w-full py-3 bg-indigo-600 text-white rounded-lg font-semibold hover:bg-indigo-700 transition-colors shadow-md cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6 pt-6 border-t border-gray-200 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>

    <div class="mt-8 text-center text-sm text-gray-500">
      <p>&copy; 2025 Knowledge Hub. All rights reserved.</p>
    </div>
  </div>
</div>