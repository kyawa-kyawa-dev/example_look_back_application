<div id=<%= tag.id %> class="space-y-2 mt-4">
  <!-- 固定タグ（例） -->
  <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
    <div class="flex items-center gap-3">
      <div class="w-8 h-8 rounded-full border-2"
        style="background-color: <%= tag.color %>; border-color: <%= tag.color %>">
      </div>

      <div>
        <span class="px-3 py-1 text-sm rounded-full font-medium inline-block border"
          style="background-color: <%= tag.color %>20; color: <%= tag.color %>; border-color: <%= tag.color %>40;">
          #<%= tag.name %>
        </span>
      </div>

      <div class="text-sm text-gray-500">
        8件のナレッジ
      </div>
    </div>

    <div class="flex items-center gap-2">
      <span class="text-xs text-gray-400 font-mono"><%= tag.color %></span>

      <!-- タグ詳細 -->
      <%= link_to "詳細", tag_path(tag) , class: "p-2 text-gray-600 hover:bg-gray-100 rounded transition-colors" %>

      <!-- 編集ボタン -->
      <button class="p-2 text-gray-600 hover:bg-gray-100 rounded transition-colors">
        <%= link_to edit_tag_path(tag), data: { turbo_frame: "modal" } do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
        <% end %>
      </button>

      <!-- 削除ボタン -->
      <%= button_to tag_path(tag), method: :delete, data: { turbo_confirm: '本当に削除しますか?' }, class: "p-2 text-red-600 hover:bg-red-50 rounded transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      <% end %>
    </div>
  </div>
</div>